<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/buttonLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <!-- tools:context=".LoginActivity" -->

    <!-- Content below header and above footer -->
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_alignParentTop="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/login_button">


            <ImageView
                android:layout_width="358dp"
                android:layout_height="370dp"
                android:id="@+id/imageView"
                android:gravity="center_horizontal"
                android:src="@drawable/taco1"
                android:contentDescription="@string/tacofirstpage" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:id="@+id/greetingTrello"
            android:inputType="text"
            android:textSize="28dp"
            android:layout_above="@+id/login_button"
            android:contentDescription="GreetingText"
            android:text="WELCOME TO TRELLO"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:textSize="@dimen/button_size_log"
            android:id="@+id/login_button"
            android:textStyle="bold|normal"
            android:clickable="true"
            android:gravity="center"
            android:text="  LOGIN  "
            android:background="@drawable/shape_button"
            android:contentDescription="LogIn"
            android:contextClickable="true"
            android:layout_gravity="center_horizontal"
         />


    </LinearLayout>

</RelativeLayout>

